<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.jy.jyweather.activity.SettingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/software_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:src="@mipmap/ic_icon"/>

        <TextView
            android:id="@+id/software_name_vesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/software_icon"
            android:layout_centerHorizontal="true"
            android:text="@string/software_name_version"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </RelativeLayout>
</RelativeLayout>
