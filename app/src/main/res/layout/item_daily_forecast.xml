<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="dailyForecast"
            type="com.jy.weather.entity.DailyForecast" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@{dailyForecast.date}" />

        <TextView
            android:id="@+id/tv_weekday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@{dailyForecast.weekday}" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:paddingStart="8dp">

            <ImageView
                android:id="@+id/iv_cond_day"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:imageId="@{dailyForecast.icon}" />

            <TextView
                android:id="@+id/tv_cond_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@{dailyForecast.dayCondText}" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_temp_min"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="@{dailyForecast.minTemp}" />

        <TextView
            android:id="@+id/tv_temp_max"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="@{dailyForecast.maxTemp}" />
    </LinearLayout>
</layout>

